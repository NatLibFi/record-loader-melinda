{
    "type": "object",
    "properties": {
	"matching": {
	    "$ref": "https://github.com/NatLibFi/json-similarity/blob/master/resources/spec-schema.json"
	},
	"matchCandidatesQuery": {
	    "type": "array",
	    "items": {
		"type": "object",
		"properties": {
		    "transformations": {
			"$ref": "https://github.com/NatLibFi/json-path-transformations/blob/master/resources/transformations-schema.json#/properties/transformations"
		    },
		    "query": {
			"anyOf": [
			    {
				"description": "SRU query",
				"type": "string"
			    },
			    {
				"description": "Aleph X query",
				"type": "object",
				"properties": {
				    "index": {
					"type": "string"
				    },
				    "term": {
					"type": "string"
				    }
				},
				"required": ["index", "term"]
			    }
			]
		    }
		},
		"required": ["query"]
	    }
	}
    },
    "require": ["matching", "matchCandidatesQuery"]
}